[MESSAGES CONTROL]
disable=
;   locally-disabled,
  multiple-statements,
  too-many-boolean-expressions,
;   line-too-long,
;   missing-function-docstring,
  missing-module-docstring,
;   missing-class-docstring,
;   missing-final-newline,
  redefined-outer-name,
;   too-many-return-statements,
  raise-missing-from

indent-string='  '
max-args=10
max-attributes=10

[FORMAT]
max-line-length=140
variable-rgx=^[a-z_][a-z\d_]{0,30}$
argument-rgx=^[a-z_][a-z\d_]{0,30}$
attr-rgx=^[a-z_][a-z\d_]{0,30}$

[VARIABLES]
redefining-builtins-modules=sys # sys is allowed to redefine builtins e.g. `exit = sys.exit`